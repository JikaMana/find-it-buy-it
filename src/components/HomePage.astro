---

import '../styles/global.css';
import {
  Search,
  MapPin,
  Store,
ArrowRight,
} from 'lucide-react';
import Hero from './Hero.astro';
import Solutions from './Solutions.astro';
import Features from './Features.astro';
import Questions from './Questions.astro';
import mobileScreenshot from "../assets/mobileScreenshot.png"

---


    <div class="w-full min-h-screen bg-white">
      <main class="pt-[72px]">
        <Hero client:load/>
        <Solutions />
        <section class="py-16">
          <div class="max-w-[1280px] mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12">
              How FindItBuyIt Works
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
              <div class="text-center">
                <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <Search className="w-8 h-8 text-green-600" />
                </div>
                <h3 class="text-xl font-semibold mb-2">Search</h3>
                <p class="text-gray-600">
                  Enter the product you're looking for
                </p>
              </div>
              <div class="text-center">
                <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <MapPin className="w-8 h-8 text-green-600" />
                </div>
                <h3 class="text-xl font-semibold mb-2">Find</h3>
                <p class="text-gray-600">
                  See which stores have it in stock
                </p>
              </div>
              <div class="text-center">
                <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <Store className="w-8 h-8 text-green-600" />
                </div>
                <h3 class="text-xl font-semibold mb-2">Buy</h3>
                <p class="text-gray-600">
                  Get directions, prices, and delivery options
                </p>
              </div>
            </div>
          </div>
        </section>
       <Features />
        <section class="py-16">
          <div class="max-w-[1280px] mx-auto px-4">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
              <div>
                <div class="text-4xl font-bold text-green-600 mb-2">
                  20+
                </div>
                <p class="text-gray-600">Partner Stores</p>
              </div>
              <div>
                <div class="text-4xl font-bold text-green-600 mb-2">
                  1000+
                </div>
                <p class="text-gray-600">Daily Users</p>
              </div>
              <div>
                <div class="text-4xl font-bold text-green-600 mb-2">
                  24/7
                </div>
                <p class="text-gray-600">Available</p>
              </div>
              <div>
                <div class="text-4xl font-bold text-green-600 mb-2">
                  98%
                </div>
                <p class="text-gray-600">Customer Satisfaction</p>
              </div>
            </div>
          </div>
        </section>
       <Questions />
<section class="py-16 bg-green-100">
  <div class="max-w-7xl mx-auto flex flex-col-reverse md:flex-row items-center justify-center gap-8">
    <!-- Text Section -->
    <div class="w-full md:w-1/2 px-4 text-center">
      <h2 class="text-3xl font-bold mb-6">Download Our App</h2>
      <p class="text-xl text-gray-600 mb-8">
        Experience FindItBuyIt on the go. Get real-time product availability, shop smarter, and enjoy exclusive featuresâ€”anytime, anywhere.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-2 max-w-xl mx-auto">
        <div class="flex flex-col sm:flex-row gap-2 my-4">
          <div class="border-2 border-lime-950 p-1 rounded-md flex gap-2 items-center">
            <i class="fa-brands fa-google-play text-2xl"></i>
            <div>
              <h3 class="text-md leading-4 font-semibold">Google Play</h3>
            </div>
            <ArrowRight className="w-5 h-5" />
          </div>
          <div class="border-2 border-lime-950 p-1 rounded-md flex gap-2 items-center">
            <i class="fa-brands fa-app-store text-2xl"></i>
            <div>
              <h3 class="text-md leading-4 font-semibold">App Store</h3>
            </div>
            <ArrowRight className="w-5 h-5" />
          </div>
          <div class="border-2 border-lime-950 p-1 rounded-md flex gap-2 items-center">
            <i class="fa-brands fa-android text-2xl"></i>
            <div>
              <h3 class="text-md leading-4 font-semibold">Download APK</h3>
            </div>
            <ArrowRight className="w-5 h-5" />
          </div>
        </div>
      </div>
    </div>
    <!-- Mobile App Image Section -->
    <div class="w-full md:w-auto flex justify-center">
      <div class="relative bg-white rounded-3xl shadow-2xl overflow-hidden w-[250px] h-[450px] md:w-[300px] md:h-[600px]">
        <img
          src={mobileScreenshot.src}
          alt="Mobile App Screenshot"
          class="w-full h-full object-cover"
        />
      </div>
    </div>
  </div>
</section>

      </main>
    </div>




