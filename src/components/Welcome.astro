<script>

  const waitlistButton = document.getElementById("waitlist-button");
const waitlist = document.getElementById("waitlist");

waitlistButton?.addEventListener("click", () => {
    window.scrollTo({
        top: 0,
        behavior: 'smooth'
    });
        waitlist?.focus({ preventScroll: true }); 

});

    
</script>