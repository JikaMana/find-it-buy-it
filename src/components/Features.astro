---
import { Bell, Calculator, Heart, Languages, Map, ShoppingCart, Smartphone } from "lucide-react";

---

 <section class="bg-gray-50 py-16">
          <div class="max-w-[1440px] mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12">
              Powerful Features You'll Love
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
              
              <div class="bg-white p-6 rounded-xl shadow-sm text-center hover:shadow-md transition-shadow">
                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <Map className="w-6 h-6 text-green-600" />
                </div>
                <h3 class="font-semibold mb-2">Store Navigation</h3>
                <p class="text-gray-600">
                  Get directions to the nearest store
                </p>
              </div>
              <div class="bg-white p-6 rounded-xl shadow-sm text-center hover:shadow-md transition-shadow">
                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <ShoppingCart className="w-6 h-6 text-green-600" />
                </div>
                <h3 class="font-semibold mb-2">Price Comparison</h3>
                <p class="text-gray-600">Find the best deals instantly</p>
              </div>
              <div class="bg-white p-6 rounded-xl shadow-sm text-center hover:shadow-md transition-shadow">
                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <Bell className="w-6 h-6 text-green-600" />
                </div>
                <h3 class="font-semibold mb-2">Discount Deals Alert</h3>
                <p class="text-gray-600">
                  Get notified when stores are offering discounts
                </p>
              </div>
              <div class="bg-white p-6 rounded-xl shadow-sm text-center hover:shadow-md transition-shadow">
                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <Smartphone className="w-6 h-6 text-green-600" />
                </div>
                <h3 class="font-semibold mb-2">Mobile App</h3>
                <p class="text-gray-600">
                  Shop on the go with our mobile app
                </p>
              </div>
            </div>
          </div>
          <div class="max-w-[1440px] mx-auto px-4 mt-8 md:mt-16">
            <h2 class="text-3xl font-bold text-center mb-12">
              Premium Features to level up
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
              <div class="bg-white p-6 rounded-xl shadow-sm text-center hover:shadow-md transition-shadow">
                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <Bell className="w-6 h-6 text-green-600" />
                </div>
                <h3 class="font-semibold mb-2">Real-Time Alerts</h3>
                <p class="text-gray-600">
                  Get notified when items are back in stock
                </p>
              </div>
               <div class="bg-white p-6 rounded-xl shadow-sm text-center hover:shadow-md transition-shadow">
                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <Calculator className="w-6 h-6 text-green-600" />
                </div>
                <h3 class="font-semibold mb-2">In-built price Calculator</h3>
                <p class="text-gray-600">
                  Calculate prices of items to purchase before getting to your preferred store
                </p>
              </div>
              <div class="bg-white p-6 rounded-xl shadow-sm text-center hover:shadow-md transition-shadow">
                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <Languages className="w-6 h-6 text-green-600" />
                </div>
                <h3 class="font-semibold mb-2">Multi-Language search</h3>
                <p class="text-gray-600">
                 Search for items in other languages or informal way 
                </p>
              </div>
             <div class="bg-white p-6 rounded-xl shadow-sm text-center hover:shadow-md transition-shadow">
                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <Heart className="w-6 h-6 text-green-600" />
                </div>
                <h3 class="font-semibold mb-2">Favourite stores</h3>
                <p class="text-gray-600">
                 Add a store to Favourite stores section to easy get back to the store
                </p>
              </div>
            </div>
          </div>
        </section>